const postUsers_Group = async (req, res) => {
  try {
    req.body.idGroup = parseInt(req.params.id_group);
    const result = await register_User_has_Group(req.body);
    res.status(202).status(201).json(result);
  } catch (err) {
    console.log(err);
    res.status(500).json(err);
  }
};

module.exports = {
  postUsers_Group,
};
